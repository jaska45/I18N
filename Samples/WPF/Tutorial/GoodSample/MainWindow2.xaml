<!-- This is an alternative way to fix the sising issues -->
<Window 
  x:Class="Tutorial.MainWindow2"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Sample" Height="220" Width="500" Loaded="Window_Loaded">
  
  <Grid x:Uid="grid" Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <!-- StackPanel has been replaced with DockPanel -->
    <DockPanel x:Uid="filePanel" Height="30" Margin="0,0,0,8">
      <Label x:Uid="fileLabel" DockPanel.Dock="Left">_Filename:</Label>
      <Button Name="fileButton" DockPanel.Dock="Right" Padding="8,0,8,0" Click="fileButton_Click">_Browse...</Button>
      <TextBox Name="fileTextBox" Height="24" Margin="8,0,8,0" />
    </DockPanel>
    
    <CheckBox x:Uid="compressCheckBox" Grid.Row="1" VerticalAlignment="Center" Content="Compress data" />

    <Label Name="sampleLabel" Grid.Row="2">donotlocalize</Label>
    <Label Name="dateLabel" Grid.Row="3">donotlocalize</Label>
    <Label Name="skiLabel1" Grid.Row="4">donotlocalize</Label>
    <Label Name="skiLabel2" Grid.Row="5">donotlocalize</Label>
  </Grid>
</Window>
