<Window 
  x:Class="Font.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Font Sample" 
  MinWidth="500"
  SizeToContent="WidthAndHeight"
  MouseDown="Window_MouseDown">
  
  <StackPanel x:Name="panel">
    <Label x:Name="label1">One</Label>
    <Label x:Name="label2" FontSize="30">Two</Label>
    <Label x:Name="label3" FontFamily="Courier New" FontSize="20">Three</Label>
    <Label x:Name="labelPx" FontSize="30px">device-independent units</Label>
    <Label x:Name="labelPt" FontSize="30pt">points</Label>
    <Label x:Name="labelCm" FontSize="2.1cm">centimeters</Label>
    <Label x:Name="labelIn" FontSize="0.9in">inches</Label>
  </StackPanel>
</Window>
