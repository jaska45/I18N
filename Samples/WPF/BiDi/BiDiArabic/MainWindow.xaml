<Window 
  x:Class="BiDiArabic.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Sample" 
  SizeToContent="WidthAndHeight"
  MinWidth="500"
  FlowDirection="RightToLeft">

  <StackPanel x:Name="panel">
    <Label x:Name="label" Margin="5,5,5,0" Target="{Binding ElementName=textBox}">_Value:</Label>

    <Grid x:Name="grid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="4*" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>

      <TextBox x:Name="textBox" Grid.Column="0" Margin="5,0,5,0" />
      <Button x:Name="button" Grid.Column="1" Margin="5,0,5,0" Click="button_Click">_Clear</Button>
    </Grid>

    <CheckBox Margin="5">_Save</CheckBox>
  </StackPanel>
</Window>
