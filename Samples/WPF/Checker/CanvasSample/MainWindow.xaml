<Window 
  x:Class="CanvasSample.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:CanvasSample"
  mc:Ignorable="d"
  Title="Sample" Height="200" Width="300" ContentRendered="Window_ContentRendered">

  <Canvas x:Uid="panel">
    <Button x:Uid="button1" Canvas.Left="10" Canvas.Top="10">Click me</Button>
    <Button x:Uid="button2" Canvas.Left="50" Canvas.Top="25">Click me</Button>
    <Button x:Uid="button3" Canvas.Left="90" Canvas.Top="40">Click me</Button>
  </Canvas>
</Window>
